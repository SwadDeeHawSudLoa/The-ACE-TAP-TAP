<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/button4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/backgorund"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textviewList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_4_28"
        android:layout_marginBottom="@dimen/size_4_28"
        android:background="#FDE3E3"
        android:backgroundTint="@color/white"
        android:gravity="center|center_horizontal"
        android:text="@string/history"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/black">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B4E3CECE"
        android:color="@android:color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/col_trans_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="10"
            android:background="#B5E3CECE"
            android:text="@string/col_trans_id_str"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/col_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#B8E3CECE"
            android:text="@string/col_name_str"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/col_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#B5E3CECE"
            android:text="@string/col_msg_str"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/black">

    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="531dp"
        android:background="#C47ACCAB"
        android:fillViewport="true"
        android:padding="@dimen/size_1">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="@dimen/size_17_150"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/backtimenu"
            android:padding="@dimen/size_1_0"
            android:scaleType="fitCenter"
            android:src="@drawable/backtomenu" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="Button"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </LinearLayout>

</LinearLayout>
